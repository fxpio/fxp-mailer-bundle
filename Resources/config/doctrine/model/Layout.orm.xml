                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Fxp\Component\Mailer\Model\TemplateLayout">

        <field name="name" column="name" type="string" length="255" unique="true" nullable="false" />

        <field name="label" column="label" type="string" length="255" nullable="true" />

