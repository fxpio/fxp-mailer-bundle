<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Doctrine Template Loaders -->
        <service id="fxp_mailer.loader.template_doctrine_layout" class="Fxp\Component\Mailer\Doctrine\Loader\EntityTemplateLayoutLoader">
            <tag name="fxp_mailer.layout_loader" priority="-100" />
            <argument type="service" id="doctrine" />
            <argument>%fxp_mailer.layout_class%</argument>
        </service>

        <service id="fxp_mailer.loader.template_doctrine_mail" class="Fxp\Component\Mailer\Doctrine\Loader\EntityTemplateMailLoader">
            <tag name="fxp_mailer.mail_loader" priority="-100" />
            <argument type="service" id="doctrine" />
            <argument>%fxp_mailer.mail_class%</argument>
        </service>
    </services>
</container>
