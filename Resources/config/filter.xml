<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Template Filter Registry -->
        <service id="fxp_mailer.filter_registry" class="Fxp\Component\Mailer\Filter\FilterRegistry">
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <!-- Filter Event Listener -->
        <service id="fxp_mailer.listener.filter" class="Fxp\Component\Mailer\Listener\FilterSubscriber">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="fxp_mailer.filter_registry" />
        </service>
    </services>
</container>
