<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.filter_registry.class">Sonatra\Component\Mailer\Filter\FilterRegistry</parameter>
        <parameter key="sonatra_mailer.listener.filter.class">Sonatra\Component\Mailer\Listener\FilterSubscriber</parameter>
    </parameters>

    <services>
        <!-- Template Filter Registry -->
        <service id="sonatra_mailer.filter_registry" class="%sonatra_mailer.filter_registry.class%">
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <!-- Filter Event Listener -->
        <service id="sonatra_mailer.listener.filter" class="%sonatra_mailer.listener.filter.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="sonatra_mailer.filter_registry" />
        </service>
    </services>
</container>
