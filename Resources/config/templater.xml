<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- File Template Loaders -->
        <!-- Not attached with tag because removing on the optimization -->
        <service id="fxp_mailer.loader.template_layout_twig" class="Fxp\Component\Mailer\Loader\TwigTemplateLayoutLoader">
            <argument type="collection" />
            <argument type="service" id="kernel" />
        </service>

        <!-- Not attached with tag because removing on the optimization -->
        <service id="fxp_mailer.loader.template_mail_twig" class="Fxp\Component\Mailer\Loader\TwigTemplateMailLoader">
            <argument type="collection" />
            <argument type="service" id="fxp_mailer.loader.template_layout_chain" />
            <argument type="service" id="kernel" />
        </service>

        <!-- Not attached with tag because removing on the optimization -->
        <service id="fxp_mailer.loader.template_layout_yaml" class="Fxp\Component\Mailer\Loader\YamlTemplateLayoutLoader">
            <argument type="collection" />
            <argument type="service" id="kernel" />
        </service>

        <!-- Not attached with tag because removing on the optimization -->
        <service id="fxp_mailer.loader.template_mail_yaml" class="Fxp\Component\Mailer\Loader\YamlTemplateMailLoader">
            <argument type="collection" />
            <argument type="service" id="fxp_mailer.loader.template_layout_chain" />
            <argument type="service" id="kernel" />
        </service>

        <!-- Template Loaders -->
        <service id="fxp_mailer.loader.template_layout_array" class="Fxp\Component\Mailer\Loader\ArrayTemplateLayoutLoader">
            <tag name="fxp_mailer.layout_loader" priority="-25" />
            <argument type="collection" />
        </service>

        <service id="fxp_mailer.loader.template_mail_array" class="Fxp\Component\Mailer\Loader\ArrayTemplateMailLoader">
            <tag name="fxp_mailer.mail_loader" priority="-25" />
            <argument type="collection" />
            <argument type="service" id="fxp_mailer.loader.template_layout_chain" />
        </service>

        <!-- Chain Template Loaders -->
        <service id="fxp_mailer.loader.template_layout_chain" class="Fxp\Component\Mailer\Loader\TemplateLayoutLoaderChain">
            <argument type="collection" />
        </service>

        <service id="fxp_mailer.loader.template_mail_chain" class="Fxp\Component\Mailer\Loader\TemplateMailLoaderChain">
            <argument type="collection" />
        </service>

        <!-- Templater -->
        <service id="fxp_mailer.mail_templater" class="Fxp\Component\Mailer\MailTemplater" public="true">
            <argument type="service" id="fxp_mailer.loader.template_mail_chain" />
            <argument type="service" id="twig" />
            <argument type="service" id="event_dispatcher" />
            <call method="setTranslator">
                <argument type="service" id="translator" on-invalid="ignore" />
            </call>
        </service>
    </services>
</container>
