<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.transport.swiftmailer.dkim_signer_plugin.class">Sonatra\Component\Mailer\Transport\SwiftMailer\DkimSignerPlugin</parameter>
    </parameters>

    <services>
        <service id="sonatra_mailer.transport.swiftmailer.dkim_signer_plugin" class="%sonatra_mailer.transport.swiftmailer.dkim_signer_plugin.class%" public="false">
            <tag name="swiftmailer.default.plugin" />
            <argument>%sonatra_mailer.transport.swiftmailer.dkim_signer.private_key_path%</argument>
            <argument>%sonatra_mailer.transport.swiftmailer.dkim_signer.domain%</argument>
            <argument>%sonatra_mailer.transport.swiftmailer.dkim_signer.selector%</argument>
        </service>
    </services>
</container>
