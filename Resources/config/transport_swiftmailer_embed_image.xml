<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.transport.swiftmailer.embed_image_plugin.class">Sonatra\Component\Mailer\Transport\SwiftMailer\EmbedImagePlugin</parameter>
    </parameters>

    <services>
        <service id="sonatra_mailer.transport.swiftmailer.embed_image_plugin" class="%sonatra_mailer.transport.swiftmailer.embed_image_plugin.class%">
            <tag name="swiftmailer.default.plugin" />
            <argument>%kernel.root_dir%/../web</argument>
            <argument>%sonatra_mailer.transport.swiftmailer.embed_image.host_pattern%</argument>
        </service>
    </services>
</container>
