<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fxp_mailer.transport.swiftmailer.embed_image_plugin"
                 class="Fxp\Component\Mailer\Transport\SwiftMailer\EmbedImagePlugin">
            <tag name="swiftmailer.default.plugin" />
            <argument>%fxp_mailer.transport.swiftmailer.embed_image.web_dir%</argument>
            <argument>%fxp_mailer.transport.swiftmailer.embed_image.host_pattern%</argument>
        </service>
    </services>
</container>
