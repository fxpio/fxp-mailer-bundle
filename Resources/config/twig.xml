<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.fxp_mailer.templater"
                 class="Fxp\Component\Mailer\Twig\Extension\TemplaterExtension"
                 public="false">
            <tag name="twig.extension" />
            <argument type="service" id="fxp_mailer.loader.layout_chain" />
            <argument type="service" id="translator" />
            <property name="container" type="service" id="service_container" />
        </service>
    </services>
</container>
